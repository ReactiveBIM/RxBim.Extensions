{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/build",
  "title": "Build Schema",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "AllPackages": {
          "type": "boolean",
          "description": "If true, selects all packages to build. Otherwise, you will be prompted to select packages to build"
        },
        "AppVersion": {
          "type": "string",
          "description": "Version for one type of CAD application: 'Autocad2023', 'Revit2022' etc",
          "enum": [
            "Autocad2019",
            "Autocad2020",
            "Autocad2021",
            "Autocad2022",
            "Autocad2023",
            "Autocad2024",
            "Autocad2025",
            "Civil2019",
            "Civil2020",
            "Civil2021",
            "Civil2022",
            "Civil2023",
            "Civil2024",
            "Civil2025",
            "Revit2019",
            "Revit2020",
            "Revit2021",
            "Revit2022",
            "Revit2023",
            "Revit2024",
            "Revit2025"
          ]
        },
        "Configuration": {
          "type": "string",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitbucket",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "IgnoreFailedSources": {
          "type": "boolean",
          "description": "Ignore unreachable sources during Restore"
        },
        "MainSolutionFolderName": {
          "type": "string",
          "description": "Main solution folder name"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "NugetApiKey": {
          "type": "string",
          "description": "Nuget API key",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "NugetSource": {
          "type": "string",
          "description": "NuGet source URL"
        },
        "Packages": {
          "type": "array",
          "description": "Package names list",
          "items": {
            "type": "string"
          }
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "ProjectsForIncreaseVersion": {
          "type": "array",
          "description": "Projects for increase version",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "AddPublishTags",
              "Clean",
              "Compile",
              "DeleteLocalPacks",
              "Develop",
              "IncreaseProjectsVersion",
              "IncreaseToDevVersions",
              "IncreaseToRcVersions",
              "IncreaseToReleaseVersions",
              "Pack",
              "PackagesList",
              "PackLocal",
              "Prerelease",
              "Publish",
              "Release",
              "ResetVersion",
              "Restore",
              "SetVersion",
              "SetVersion2019",
              "SetVersion2020",
              "SetVersion2021",
              "SetVersion2022",
              "SetVersion2023",
              "SetVersion2024",
              "SetVersion2025",
              "SetVersionForApp",
              "Test"
            ]
          }
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "AddPublishTags",
              "Clean",
              "Compile",
              "DeleteLocalPacks",
              "Develop",
              "IncreaseProjectsVersion",
              "IncreaseToDevVersions",
              "IncreaseToRcVersions",
              "IncreaseToReleaseVersions",
              "Pack",
              "PackagesList",
              "PackLocal",
              "Prerelease",
              "Publish",
              "Release",
              "ResetVersion",
              "Restore",
              "SetVersion",
              "SetVersion2019",
              "SetVersion2020",
              "SetVersion2021",
              "SetVersion2022",
              "SetVersion2023",
              "SetVersion2024",
              "SetVersion2025",
              "SetVersionForApp",
              "Test"
            ]
          }
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        },
        "VersionNumber": {
          "type": "string",
          "description": "Version number for all types of CAD applications: '2022', '2023' etc",
          "enum": [
            "Version2019",
            "Version2020",
            "Version2021",
            "Version2022",
            "Version2023",
            "Version2024",
            "Version2025"
          ]
        },
        "VersionPrefix": {
          "type": "string",
          "description": "Project second version prefix"
        }
      }
    }
  }
}
